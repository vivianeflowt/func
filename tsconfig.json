{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "strict": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "dist",
        "rootDir": "src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "target": "es2020"
    },
    "include": [
        "src/**/*.ts",
        "../../typings/**/*.d.ts",
    ],
    "exclude": [
        "**__tests__/**",
        "src/**/*.spec.ts",
    ],
    "typedocOptions": {
        "entryPoints": [
            "src"
        ],
        "out": "docs"
    }
}